@model SV20T1020619.web.Models.CategorySearchResult
@{
    ViewBag.Title = "Quản lý loại hàng";
}
    
<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="~/Category">
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên khách hàng cần tìm">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> hàng trong tổng số <strong>@Model.PageCount</strong> trang
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Tên hàng</th>
                            <th>Mô tả</th>

                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>

                                <td class="text-right">
                                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>

                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (Model.Page == p)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Category?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

