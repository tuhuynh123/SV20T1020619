@{
    ViewBag.Title = "Quản lý Mặt hàng";
}
    <div class="box box-primary">
        <div class="box-body">
            <form id="formSearch" action="#">
                <div class="container-fluid row">
                    <div class="col-sm-3">
                        <select class="form-control" name="category">
                            <option>--Tất cả loại hàng--</option>
                            <option>--Điện gia dụng--</option>
                            <option>--Thực phẩm--</option>
                        </select>
                    </div>
                    <div class="col-sm-3">
                        <select class="form-control" name="category">
                            <option>--Tất cả nhà cung cấp--</option>
                            <option>--Công ty trách nhiệm vô hạn--</option>
                            <option>--Công ty vinafone--</option>
                        </select>
                    </div>
                    <div class="col-sm-6 input-group">
                        <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên mặt hàng cần tìm">
                        <div class="input-group-btn">
                            <button class="btn btn-info" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                                <i class="fa fa-plus"></i> Bổ sung
                            </a>
                        </div>
                    </div>
                </div>

            </form>
            <div>
                <p style="margin:10px 0 10px 0">
                    Có <strong>1,024</strong> mặt hàng trong tổng số <strong>100</strong> trang
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr class="bg-primary">
                                <th style="width:80px">Ảnh</th>
                                <th>Tên mặt hàng</th>
                                <th>Đơn vị tính</th>
                                <th>Giá</th>
                                <th>Ngừng bán</th>
                                <th style="width:80px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            `@for (int i = 0; i <= 10; i++)
                            {
                                <tr>
                                    <td>
                                        <img style="width:80px" src="~/images/products/acer.png" alt="Ảnh" />
                                    </td>
                                    <td>acer 15inch</td>
                                    <td>Cái</td>

                                    <td>45,000,000</td>

                                    <td></td>
                                    <td class="text-right">
                                        <a href="~/Product/Edit/123" class="btn btn-xs btn-info">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="~/Product/Delete/123" class="btn btn-xs btn-danger">
                                            <i class="fa fa-remove"></i>

                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-center">
                    <ul class="pagination">
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

