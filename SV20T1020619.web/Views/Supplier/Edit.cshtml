@model SV20T1020619.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">

            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID">

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" autofocus value="@Model.SupplierName">
                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)"  value="@Model.ContactName">
                @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                @* <select class="form-control" name="@nameof(Model.Province)">
                    <option>-- Chọn tỉnh/thành --</option>
                    @foreach (var item in SV20T1020619.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if(item.ProvinceName == @Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }

                    }
                </select> *@
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Province(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Province, "", new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
